SELECT * FROM "novaweb-desafio".CONTATO;
SELECT * FROM "novaweb-desafio".TELEFONE;

SELECT nome, STRING_AGG(telefone, ', ')
FROM "novaweb-desafio".CONTATO
INNER JOIN "novaweb-desafio".TELEFONE ON contato.contato_id=telefone.contato_id
GROUP BY nome;

